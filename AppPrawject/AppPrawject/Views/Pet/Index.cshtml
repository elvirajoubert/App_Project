@* Model definition is done here*@
@model List<Pet>

<h1>This is the list of Pets</h1>



<table class="table">
    <tr>
        <th>Name</th>
        <th>Breed</th>
        <th>Weight</th>
        <th>Image</th>
        <th></th>
    </tr>


    @if (Model.Count == 0)
    {

        <tr>
            <td colspan="4">
                You do not have pets listed. <a href="/pet/add">Add your pet here.</a>
            </td>
        </tr>
    }



    @foreach (var pet in Model)
    {
        <tr>
            <td>@pet.Name</td>
            <td>@pet.Breed</td>
            <td>@pet.Weight</td>
            <td>@pet.Image</td>
            <td>
                <a asp-controller="pet" asp-action="detail">Detail</a>
            </td>

        </tr>
    }
</table>

@if (Model.Count > 0)
{
    <a class="btn btn-primary" asp-action="add" asp-controller="pet">Add</a>
}
