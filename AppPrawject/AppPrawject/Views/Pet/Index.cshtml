@* Model definition is done here*@
@model List<Pet>

<h1>This is the list of Pets</h1>

<table>
    <tr>
        <th>Name</th>
        <th>Breed</th>
        <th>Weight</th>
        <th>Image</th>
    </tr>

    @foreach (var pet in Model)
    {
        <tr>
            <td>@pet.Name  </td>
            <td>@pet.Breed</td>
            <td>@pet.Weight</td>
            <td>@pet.Image</td>

        </tr>

    }

    @if (Model.Count == 0)
    {

        <tr>
            <td colspan="4">
                You do not have pets listed. <a href="/pet/add">Add your pet here.</a>
            </td>
        </tr>
    }


</table>

