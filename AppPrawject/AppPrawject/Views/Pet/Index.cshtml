@* Model definition is done here*@
@model List<Pet>

<h1>This is the list of Pets</h1>

<a class="btn btn-primary" asp-action="add" asp-controller="pet">Add</a>

<table>
    <tr>
        <th>Name</th>
        <th>Breed</th>
        <th>Weight</th>
        <th>Image</th>
    </tr>

    @foreach (var pet in Model)
    {
        <tr>
            <td>@pet.Name  </td>
            <td>@pet.Breed</td>
            <td>@pet.Weight</td>
            <td>@pet.Image</td>

        </tr>

    }

    @if (Model.Count == 0)
    {

        <tr>
            <td colspan="4">
                You do not have pets listed. <a href="/pet/add">Add your pet here.</a>
            </td>
        </tr>
    }



    @foreach (var pet in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelPet => pet.Name)
            </td>
            <td>
                @Html.DisplayFor(modelPet => pet.Breed)
            </td>

            <td>
                @Html.DisplayFor(modelPet => pet.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelPet => pet.Image)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { })
                @Html.ActionLink("Delete", "Delete", new { })
            </td>
        </tr>
    }
</table>

