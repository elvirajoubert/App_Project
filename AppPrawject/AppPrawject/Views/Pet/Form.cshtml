@model Pet
@* Same page for Add and Edit
    Add -> Model is null
    Edit -> Model is not null
*@


@{


    //Ternary operator

    var action = Model == null ? "Add" : "Edit";

    var petBreeds = ViewData["PetBreeds"] as ICollection<PetBreed>; //ICollection<PetBreed>
    IEnumerable<SelectListItem> petItems = new SelectList(petBreeds, "Id", "Description");

    @if (action == "Add more")
    {
        <h1>Add a new pet </h1>
    }
    else
    {
        <h1>Edit a pet </h1>
    }

}



<form asp-action="@action" asp-controller="pet" method="post">
    @*<div asp-validation-summary="All"></div>*@
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>


    <div class="form-group">
        <label asp-for="Weight"></label>
        <input class="form-control" asp-for="Weight">
        <span asp-validation-for="Weight"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        <input class="form-control" asp-for="Image">
    </div>

    <div class="form-group">
        <label asp-for="PetBreedId"></label>
        <select class="form-control" asp-for="PetBreedId" asp-items="@petItems"></select>
    </div>
    <button type="submit" class="btn btn-primary">@action</button>
    <a class="btn btn-secodary" asp-action="index" asp-controller="pet">Cancel</a>


</form>


