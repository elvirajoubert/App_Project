@model Pet

<h1>Add a pet</h1>

<form asp-action="add" asp-controller="property" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
    </div>

    <div class="form-group">
        <label asp-for="Breed"></label>
        <input class="form-control" asp-for="Breed">
    </div>

    <div class="form-group">
        <label asp-for="Weight"></label>
        <input class="form-control" asp-for="Weight">
    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        <input class="form-control" asp-for="Image">
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <a class="btn btn-secodary" asp-action="index" asp-controller="pet">Cancel</a>


</form>

